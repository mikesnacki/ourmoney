enum LineItemType {
  INCOME
  EXPENSE
}

type LinkedUser {
  id: ID! @id
  inviteSent: Boolean
  inviteAccepted: Boolean
  invitedUserName: String
  linkedUser: User
}

type IncomingRequest {
  id: ID! @id
  requestAccepted: Boolean!
  userEmail: String!
}

type LineItem {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  amount: Float!
  type: String!
  deleted: Boolean
  user: User!
}

type User {
  id: ID! @id
  email: String! @unique
  linkedUser: LinkedUser @relation(link: INLINE)
  incomingRequest: IncomingRequest @relation(link: INLINE)
  lineItems: [LineItem]
}
